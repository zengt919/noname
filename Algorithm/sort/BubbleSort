/**
*  冒泡排序
*  O(n^2)
*/

public static void BubbleSort (int [] arr){
    if(arr == null || arr.length < 2){
        return ;
    }
    for(int i = 0 ; i <= arr.length - 1; i++){
        for(int j = arr.length -1  ; j > i ; j--){
            if(arr[j-1] > arr[j]){
                int temp = arr[j];
                arr[j] = arr[j-1];
                arr[j-1] = temp ;
            }
        }
    } 

}
